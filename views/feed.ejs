<% - include('header') %>
    <% - include('header') %>
        <%- include('nav.ejs') %>
            <link rel="stylesheet" href="stylesheets/feed.css">

            <header id="head">
              <a href="/addpost">
                <% posts.forEach(function(post){%>
                    <div id="img">
                        <img src="../images/uploads/<%= post.user.profileImage%>" alt="">
                    </div>
                    <%}) %>
              </a>
                <form action="">
                    <input type="text" placeholder="Write something here.....">
                    <label for="file"><i class="ri-image-fill"></i></label>
                    <input type="file" name="file" hidden>
                    <button>submit</button>
                </form>
            </header>

            <section>
                <div class="story">
                    <% posts.forEach(function(story){%>
                    <div class="squre">

                        <div class="inner">
                            <img src="/images/uploads/<%= story.user.story %>"
                                alt="">
                        </div>
                    </div>
                    <%})%>
                </div>
            </section>
<hr>
            <section>
                <div class="posts">
                    <% posts.reverse().forEach(function(post){%>
                    <div class="post">
                            <div class="title">
                                <div class="profile">
                                    <img src="/images/uploads/<%= post.user.profileImage %>" alt="">
                                </div>
                                <h4><%= post.user.username%></h4>
                                <h6><%= post.date %></h6>
                            </div>
                            <div class="bio">
                                <p><%= post.caption %></p>
                            </div>
                            <div class="post-img">
                             <img src="../images/uploads/<%= post.postImage %>" alt="post Image">

                            </div>
                            <hr>
                            <div class="options">
                                <h3> <i class="ri-thumb-up-line"></i> Like</h3>
                                <h3> <i class="ri-chat-1-line"></i> Comment</h3>
                                <h3> <i class="ri-whatsapp-line"></i> Send</h3>
                                <h3> <i class="ri-share-forward-line"></i> Share</h3>

                            </div>


                        </div>
                        <hr>
                        <% }) %>
                </div>
                


            </section>


            <% - include('footer') %>